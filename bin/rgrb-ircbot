#!/usr/bin/env ruby
# vim: fileencoding=utf-8

require 'rubygems'
require 'bundler/setup'

require 'cinch'

require 'rgrb/plugin/hello'
require 'rgrb/plugin/keyword'
require 'rgrb/plugin/dice_roll'
require 'rgrb/plugin/random_generator.rb'

bot = Cinch::Bot.new do
  configure do |c|
    # c.server = '' # IRC サーバ
    # c.port = 6667
    # c.password = '' # パスワード
    c.nick = c.user = 'rgrb_cinch'
    c.realname = '汎用ダイスボット RGRB'

    c.plugins.plugins = [
      RGRB::Plugin::Hello,
      RGRB::Plugin::Keyword,
      RGRB::Plugin::DiceRoll,
      RGRB::Plugin::RandomGenerator
    ]
    c.plugins.prefix = /^\./
  end
end

bot.start
